# ============================================
# MyTools - Environment Configuration
# ============================================
# Copy this file to .env and modify as needed
# ============================================

# --------------------------------------------
# Logging Configuration
# --------------------------------------------
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
MYTOOLS_LOG_LEVEL=INFO

# --------------------------------------------
# File Processing Limits
# --------------------------------------------
# Maximum file size to read when generating context (in bytes)
# Default: 100000 (100 KB)
MYTOOLS_MAX_FILE_SIZE=100000

# Maximum total size of context output (in bytes)
# Default: 500000 (500 KB)
MYTOOLS_MAX_TOTAL_SIZE=500000

# --------------------------------------------
# Ignore Directories (comma-separated)
# --------------------------------------------
# Additional directories to ignore globally
MYTOOLS_IGNORE_DIRS=.terraform, .serverless, .next

# --------------------------------------------
# Ignore File Patterns (comma-separated)
# --------------------------------------------
# Additional file patterns to ignore globally
MYTOOLS_IGNORE_FILES=*.secret, *.backup, .npmrc

# --------------------------------------------
# Django Tool Settings
# --------------------------------------------
# Default port for Django development server
MYTOOLS_DJANGO_PORT=8000

# --------------------------------------------
# Environment Manager Settings
# --------------------------------------------
# Default virtual environment name
MYTOOLS_DEFAULT_VENV=.venv

# --------------------------------------------
# File Operations Settings
# --------------------------------------------
# Maximum files to display in list view
MYTOOLS_MAX_DISPLAY_FILES=100

# --------------------------------------------
# AI Context Generator Settings
# --------------------------------------------
# Maximum depth for tree visualization
MYTOOLS_TREE_MAX_DEPTH=5

# Include hidden files in context (true/false)
MYTOOLS_INCLUDE_HIDDEN=false

# --------------------------------------------
# Color Theme (for rich console)
# --------------------------------------------
# Options: default, dark, light, high-contrast
MYTOOLS_COLOR_THEME=default

# --------------------------------------------
# Performance Settings
# --------------------------------------------
# Enable/disable animations (true/false)
MYTOOLS_ENABLE_ANIMATIONS=true

# Timeout for operations (seconds)
MYTOOLS_OPERATION_TIMEOUT=30

